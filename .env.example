# إعدادات البيئة لنظام حسام جم
# Environment Configuration for Hussam Gym System

# ==================================
# إعدادات قاعدة البيانات
# Database Configuration
# ==================================

# رابط Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co

# مفتاح Supabase العام
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# مفتاح Supabase الخدمي (للعمليات الإدارية فقط)
SUPABASE_SERVICE_KEY=your-service-key-here

# ==================================
# إعدادات التطبيق
# Application Settings
# ==================================

# اسم التطبيق
VITE_APP_NAME=حسام جم

# اسم التطبيق بالإنجليزية
VITE_APP_NAME_EN=Hussam Gym

# وصف التطبيق
VITE_APP_DESCRIPTION=نظام إدارة شامل للصالات الرياضية

# إصدار التطبيق
VITE_APP_VERSION=1.0.0

# بيئة العمل (development, staging, production)
VITE_APP_ENV=development

# رابط الموقع الأساسي
VITE_APP_URL=https://hussam-gym.com

# ==================================
# إعدادات الأمان
# Security Settings
# ==================================

# أكواد الدخول الافتراضية (يفضل تغييرها)
VITE_DEFAULT_ACCESS_CODES=GYM2024,HUSSAM2024,ADMIN2024

# مدة انتهاء الجلسة بالساعات
VITE_SESSION_TIMEOUT=24

# تفعيل وضع التطوير
VITE_DEBUG_MODE=true

# ==================================
# إعدادات التحليلات
# Analytics Settings
# ==================================

# تفعيل نظام التحليلات
VITE_ANALYTICS_ENABLED=true

# رابط إرسال التحليلات (اختياري)
VITE_ANALYTICS_ENDPOINT=

# معرف Google Analytics (اختياري)
VITE_GA_TRACKING_ID=

# ==================================
# إعدادات PWA
# PWA Settings
# ==================================

# تفعيل PWA
VITE_PWA_ENABLED=true

# تفعيل الإشعارات
VITE_NOTIFICATIONS_ENABLED=true

# تفعيل العمل بدون إنترنت
VITE_OFFLINE_ENABLED=true

# ==================================
# إعدادات التصميم
# Theme Settings
# ==================================

# اللون الأساسي
VITE_PRIMARY_COLOR=#DC2626

# اللون الثانوي
VITE_SECONDARY_COLOR=#1F2937

# لون التمييز
VITE_ACCENT_COLOR=#F59E0B

# الخط الأساسي
VITE_PRIMARY_FONT=Cairo

# الخط الثانوي
VITE_SECONDARY_FONT=Tajawal

# ==================================
# إعدادات النسخ الاحتياطي
# Backup Settings
# ==================================

# تفعيل النسخ الاحتياطي التلقائي
VITE_AUTO_BACKUP_ENABLED=true

# تكرار النسخ الاحتياطي (بالأيام)
VITE_BACKUP_FREQUENCY=1

# عدد النسخ الاحتياطية المحفوظة
VITE_BACKUP_RETENTION=7

# ==================================
# إعدادات الطباعة
# Printing Settings
# ==================================

# حجم الورق الافتراضي
VITE_DEFAULT_PAPER_SIZE=A4

# اتجاه الطباعة
VITE_PRINT_ORIENTATION=portrait

# هوامش الطباعة (بالسنتيمتر)
VITE_PRINT_MARGINS=1

# ==================================
# إعدادات الاتصال
# Contact Settings
# ==================================

# رقم هاتف الصالة
VITE_GYM_PHONE=+966501234567

# بريد إلكتروني
VITE_GYM_EMAIL=info@hussam-gym.com

# عنوان الصالة
VITE_GYM_ADDRESS=ا��رياض، المملكة العربية السعودية

# موقع الويب
VITE_GYM_WEBSITE=https://hussam-gym.com

# ==================================
# إعدادات التطوير
# Development Settings
# ==================================

# تفعيل Hot Module Replacement
VITE_HMR=true

# منفذ الخادم المحلي
VITE_DEV_PORT=5173

# تفعيل sourcemaps
VITE_SOURCEMAP=true

# تفعيل وضع الاختبار
VITE_TEST_MODE=false

# ==================================
# إعدادات الإنتاج
# Production Settings
# ==================================

# تفعيل ضغط الملفات
VITE_COMPRESSION=true

# تفعيل تحليل الحزم
VITE_BUNDLE_ANALYZER=false

# حد أقصى لحجم الحزمة (KB)
VITE_MAX_BUNDLE_SIZE=1000

# ==================================
# إعدادات إضافية
# Additional Settings
# ==================================

# تفعيل الوضع المظلم
VITE_DARK_MODE_ENABLED=true

# اللغة الافتراضية
VITE_DEFAULT_LANGUAGE=ar

# المنطقة الزمنية
VITE_TIMEZONE=Asia/Riyadh

# تنسيق التاريخ
VITE_DATE_FORMAT=DD/MM/YYYY

# تنسيق الوقت
VITE_TIME_FORMAT=HH:mm

# ==================================
# متغيرات خاصة بالنشر
# Deployment Variables
# ==================================

# نوع النشر (static, server, serverless)
VITE_DEPLOY_TYPE=static

# CDN URL (اختياري)
VITE_CDN_URL=

# Asset URL prefix
VITE_ASSET_PREFIX=/

# ==================================
# إعدادات المراقبة
# Monitoring Settings
# ==================================

# تفعيل مراقبة الأداء
VITE_PERFORMANCE_MONITORING=true

# تفعيل تتبع الأخطاء
VITE_ERROR_TRACKING=true

# Sentry DSN (اختياري)
VITE_SENTRY_DSN=

# ==================================
# ملاحظات
# Notes
# ==================================

# - انسخ هذا الملف إلى .env.local وقم بتعديل القيم
# - لا تشارك المفاتيح السرية في الكود المصدري
# - استخدم متغيرات البيئة الخاصة بمنصة النشر للإنتاج
# - تأكد من أن المتغيرات التي تبدأ بـ VITE_ فقط متاحة في المتصفح
